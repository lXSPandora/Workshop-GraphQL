{
  "name": "graphql-dataloader-boilerplate",
  "description": "GraphQL DataLoader boilerplate",
  "version": "0.0.1",
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^1.1.1",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.3.0",
    "dotenv-safe": "^4.0.4",
    "graphql": "^0.12.3",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-relay": "^0.5.4",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.1.0",
    "kcors": "^2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-convert": "^1.2.0",
    "koa-graphql": "^0.7.3",
    "koa-graphql-batch": "^1.1.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.3.0",
    "mongoose": "^5.0.0-rc2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.62.0",
    "husky": "^0.14.3",
    "jest": "22.0.4",
    "jest-cli": "22.0.4",
    "lint-staged": "6.0.0",
    "nodemon": "^1.14.7",
    "prettier": "^1.9.2",
    "reify": "^0.13.5",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.4",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    },
    "setupFiles": [
      "babel-polyfill"
    ]
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/entria/graphql-dataloader-boilerplate"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "git add"
    ]
  },
  "scripts": {
    "build": "npm run clear && babel src --ignore *.spec.js --out-dir dist --copy-files",
    "clear": "rimraf ./dist",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/**",
    "precommit": "lint-staged",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  }
}
